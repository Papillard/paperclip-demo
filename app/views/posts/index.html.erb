<div class="text-center padded">
  <h1>Listing Posts</h1>

  <%= link_to 'New Post', new_post_path %>

  <% @posts.each do |post| %>
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <p>
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>

</div>


